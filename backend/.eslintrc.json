{
  "env": {
    "node": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      2,
      "single"
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
